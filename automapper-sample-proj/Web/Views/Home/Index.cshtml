@model IEnumerable<Domain.Models.EmployeeDomainModel>
@{
    ViewBag.Title = "Home Page";
}

<table class="table table-responsive table-hover" >
    <tr>
        <th>@Html.DisplayNameFor(modelItem => modelItem.Id)</th>
        <th>@Html.DisplayNameFor(modelItem => modelItem.FirstName)</th>
        <th>@Html.DisplayNameFor(modelItem => modelItem.LastName)</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })</td>
        </tr>
    }
</table>